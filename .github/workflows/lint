name: "Lint Markdown Files"
on: [push, pull_request]

jobs:
  lint:
    runs-on: ubuntu-latest
    steps:
      - name: "Checkout code"
        uses: actions/checkout@v2  # Ensure this is here

      - name: "Run Prose Linter"
        uses: ./github/actions/prose-lint  # Relative path to your action
        with:
          linter: "proselint"
